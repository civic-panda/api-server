{
	"compileOnSave": true,
	"compilerOptions": {
			"target": "es6",
			"outDir": "build",
			"rootDir": "src",
			"module": "commonjs",
			"sourceMap": true,
			"noImplicitAny": true,
			"suppressImplicitAnyIndexErrors": true,
			"allowSyntheticDefaultImports": true,
			"moduleResolution": "node",
			"noUnusedLocals": true,
			"noUnusedParameters": true,
			"pretty": true
	},
	"filesGlob": [
			"src/**/*.ts"
	],
	"exclude": [
			"build",
			"node_modules"
	],
  "typeRoots": [
      "node_modules/@types"
  ]
}
